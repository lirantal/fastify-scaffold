{
    "compilerOptions": {
        "lib": ["ES2023", "DOM"],
        "moduleResolution": "node",
        "module": "esnext",
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "strict": false,
        "allowSyntheticDefaultImports": true
      },
      "include": ["modules/**/*.js", "services/**/*.js", "plugins/**/*.js", "utils/**/*.js"],
      "exclude": ["node_modules"]
  }